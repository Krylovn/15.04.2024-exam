<Page x:Class="zvuk.page.addstatus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zvuk.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addstatus">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Статус" Grid.Row="0"  Background="Azure" FontSize="20"></TextBlock>
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="0" BorderBrush="Black" Background="Azure"></TextBox>
        <Button Name="BtnBack" Grid.Row="3" Click="BtnBack_Click" Content="Назад" Grid.Column="0" ></Button>
        <Button Content="Сохранить" Grid.Row="3" Name="BtnSave" Click="BtnSave_Click" Grid.Column="1"/>
    </Grid>
</Page>
